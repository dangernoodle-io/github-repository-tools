<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<configuration debug="false">

  <jmxConfigurator />

  <property name="dfltPattern" value="%date %yellow([%thread]) %highlight(%-5level) %cyan(%logger{25}) - %msg %throwable{25}%n" />

  <logger name="org.jboss.logging" level="info" />

  <logger name="org.jboss.weld" level="info" />
  <logger name="org.jboss.weld.Bootstrap" level="warn" />
  <logger name="org.jboss.weld.Version" level="warn" />

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${dfltPattern}</pattern>
    </encoder>
  </appender>

  <root level="${default.logback.level}:-trace}">
    <appender-ref ref="console" />
  </root>

</configuration>
